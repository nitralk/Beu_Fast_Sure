name: BEUP Results Monitor

on:
  schedule:
    # Check every 5 minutes (minimum allowed by GitHub Actions)
    - cron: '*/5 * * * *'
    # Additional frequent checks during likely result announcement times
    - cron: '*/2 9-18 * * 1-5'  # Every 2 minutes during business hours
  
  workflow_dispatch:  # Allow manual triggering
    inputs:
      check_type:
        description: 'Type of check to perform'
        required: false
        default: 'standard'
        type: choice
        options:
        - standard
        - download_only

jobs:
  monitor:
    runs-on: ubuntu-latest
    timeout-minutes: 10
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Cache pip dependencies
      uses: actions/cache@v3
      with:
        path: ~/.cache/pip
        key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
        restore-keys: |
          ${{ runner.os }}-pip-
          
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        
    - name: Run monitoring script
      env:
        DISCORD_WEBHOOK_URL: ${{ secrets.DISCORD_WEBHOOK_URL }}
        GITHUB_ACTIONS: true
        CHECK_TYPE: ${{ github.event.inputs.check_type || 'standard' }}
      run: |
        echo "Starting BEUP Results Monitor..."
        echo "Check type: $CHECK_TYPE"
        echo "Timestamp: $(date -u)"
        python discord_monitor.py
        
    - name: Upload logs on failure
      if: failure()
      uses: actions/upload-artifact@v3
      with:
        name: monitor-logs-${{ github.run_number }}
        path: |
          *.log
          *.txt
        retention-days: 7
